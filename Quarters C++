#include <iostream>
using namespace std;

int main () {
  double number_of_quarters, number_of_dimes, number_of_nickels, number_of_pennies, quarter_value, dime_value, nickel_value, penny_value, total_value;

  std::cout << "As you enter in the requested information, please hit the enter or return key after entering the information." << std::endl;

  std::cout << "Enter the number of quarters you have." << std::endl;
  std::cin >> number_of_quarters;

  quarter_value = number_of_quarters * .25;

  std::cout << "Enter the number of dimes you have." << std::endl;
  std::cin >> number_of_dimes;

  dime_value = number_of_dimes * .10;

  std::cout << "Enter the number of nickels you have." << std::endl;
  std::cin >> number_of_nickels;

  nickel_value = number_of_nickels * .05;

  std::cout << "Enter the number of pennies you have." << std::endl;
  std::cin >> number_of_pennies;

  penny_value = number_of_pennies * .01;

  total_value = quarter_value + dime_value + nickel_value + penny_value;

  std::cout << "You have a total of $" << total_value << " in coin value!" << std::endl;

  char dummy;
  std::cin >> dummy;

  return 0;
}
